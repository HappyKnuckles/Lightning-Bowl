{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.svg",
          "/*.jpg",
          "/*.png"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "ball-images",
      "urls": [
        "https://bowwwl.com/sites/default/files/styles/medium/public/balls/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 500,
        "maxAge": "30d",
        "timeout": "10s"
      }
    },
    {
      "name": "ball-api",
      "urls": [
        "https://bowwwl.com/api/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1h"
      }
    },
    {
      "name": "pattern-api",
      "urls": [
        "https://pattern.lightningbowl.de/api/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 5000,
        "maxAge": "365d"
      }
    }
  ]
}
